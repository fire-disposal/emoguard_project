# 生产环境环境变量配置
# 复制此文件为 .env 并根据实际情况修改

# Django配置
DEBUG=False
SECRET_KEY=your-very-secret-key-here-change-this-in-production
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1

# 数据库配置（使用外部PostgreSQL）
DATABASE_URL=postgresql://username:password@your-db-host:5432/emoguard

# 微信小程序配置
WECHAT_MINI_PROGRAM_APP_ID=your_wechat_app_id
WECHAT_MINI_PROGRAM_APP_SECRET=your_wechat_app_secret

# 管理员账户配置（可选）
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@your-domain.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password

# 端口配置（Docker容器内部端口）
PORT=8000