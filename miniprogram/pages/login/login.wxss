/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);

  padding: 0 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* Logo 区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.app-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 登录卡片 */
.login-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 40rpx;
}

.card-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.card-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 12rpx;
}

.card-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.redirect-hint {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.card-content {
  margin-bottom: 32rpx;
}

.wechat-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ae56 100%);
  border-radius: 16rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  padding: 0;
  line-height: 96rpx;
}
/* 协议勾选区域样式 */
.agreement-check {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 24rpx 0 0 0;
  font-size: 24rpx;
  flex-wrap: wrap;
}

.agreement-label {
  display: flex;
  align-items: center;
  margin-right: 8rpx;
}

.agreement-label checkbox {
  margin-right: 8rpx;
  transform: scale(0.8);
}

.agreement-link {
  color: #1890ff;
  text-decoration: underline;
  margin: 0 4rpx;
  cursor: pointer;
}

.wechat-btn::after {
  border: none;
}

.wechat-btn:active:not([disabled]) {
  transform: scale(0.98);
}

.wechat-btn.loading,
.wechat-btn[disabled] {
  opacity: 0.7;
}

.btn-loading,
.btn-normal {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.loading-icon,
.wechat-icon {
  font-size: 40rpx;
}

.loading-text,
.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.card-footer {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 28rpx;
}

.info-text {
  font-size: 24rpx;
  color: #999;
}

/* 底部协议 */
.agreement {
  text-align: center;
  padding: 20rpx 0;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.agreement-link {
  font-size: 24rpx;
  color: #fff;
  text-decoration: underline;
  margin: 0 4rpx;
}

