/* pages/profile/index/index.wxss */
.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f5ff 100%);
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 用户卡片 */
.user-card {
  margin-bottom: 32rpx;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.user-header {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  background: #bbb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-right: 32rpx;
}

.user-info {
  flex: 1;
}

.user-nickname {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 30rpx;
}

.user-role {
  display: block;
  font-size: 24rpx;
  color: #999;
}


/* 异常分数胶囊样式 */
.abnormal-capsule-list {
  display: flex;
  flex-wrap: wrap;
  /* gap: 16rpx; */ /* 小程序不支持gap，使用margin模拟 */
  margin-top: 8rpx;
}

.abnormal-capsule {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}
.abnormal-capsule-list .abnormal-capsule:last-child {
  margin-right: 0;
  background: #f5f5f5;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.capsule-label {
  margin-right: 12rpx;
  font-weight: 600;
}

.capsule-score {
  margin-right: 8rpx;
  color: #fa541c;
  font-weight: 700;
}

.capsule-desc {
  color: #999;
  font-size: 24rpx;
}

/* 不同异常类型颜色区分 */
.abnormal-SCD {
  background: #fffbe6;
  color: #faad14;
}
.abnormal-MMSE {
  background: #e6f7ff;
  color: #1890ff;
}
.abnormal-MoCA {
  background: #f0f5ff;
  color: #722ed1;
}
.abnormal-GAD-7 {
  background: #fff1f0;
  color: #f5222d;
}
.abnormal-PHQ-9 {
  background: #f9f0ff;
  color: #eb2f96;
}
.abnormal-ADL {
  background: #f6ffed;
  color: #52c41a;
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
}

/* 个人资料 */
.profile-section {
  margin-bottom: 32rpx;
  background: white;
  border-radius: 20rpx;
  padding: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
  font-size: 30rpx;
  color: #222;
  border-bottom: 1rpx solid #f0f0f0;
  background: white;
  border-radius: 0;
  box-shadow: none;
  transition: background-color 0.2s ease;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-title {
  flex: 1;
  font-size: 30rpx;
  color: #222;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #bbb;
  margin-left: 12rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.item-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.item-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
  padding: 0;
  height: auto;
  line-height: normal;
}

.item-input.picker {
  color: #999;
}

.save-btn {
  margin-top: 32rpx;
  padding: 28rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 退出登录 */
.logout-btn {
  width: 100%;
  padding: 28rpx;
  background: #fff;
  border: 2rpx solid #ff4d4f;
  border-radius: 16rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
  box-sizing: border-box;
}

.logout-btn:active {
  background: #fff1f0;
}
