/* pages/profile/index/index.wxss */
.profile-container {
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 用户卡片 */
.user-card {
  margin-bottom: 24rpx;
}

.user-header {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-nickname {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.user-role {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.edit-btn {
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
}

/* 个人资料 */
.profile-section {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.item-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.item-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
  padding: 0;
  height: auto;
  line-height: normal;
}

.item-input.picker {
  color: #999;
}

.save-btn {
  margin-top: 32rpx;
  padding: 28rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 退出登录 */
.logout-btn {
  width: 100%;
  padding: 28rpx;
  background: #fff;
  border: 2rpx solid #ff4d4f;
  border-radius: 16rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
  box-sizing: border-box;
}

.logout-btn:active {
  background: #fff1f0;
}
