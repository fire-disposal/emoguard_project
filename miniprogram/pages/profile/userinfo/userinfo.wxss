/* pages/profile/userinfo/userinfo.wxss */
.userinfo-container {
  min-height: 100vh;
  padding: 32rpx;
  background: #f5f5f5;
}
.user-card {
  margin-bottom: 24rpx;
}
.user-header {
  display: flex;
  align-items: center;
}
.user-avatar {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-right: 24rpx;
}
.user-info {
  flex: 1;
}
.user-nickname {
  display: block;
  font-size: 45rpx;
  font-weight: 700;
  color: #333;
}
.profile-section {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.06);
  padding: 0 0 8rpx 0;
}
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  font-size: 40rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}
.info-item:last-child {
  border-bottom: none;
}
.item-label {
  color: #888;
  width: 160rpx;
}
.item-value {
  flex: 1;
  text-align: right;
  color: #333;
}
.btn-group {
  text-align: center;
}
.edit-btn {
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 32rpx;
  padding: 24rpx 80rpx;
  font-weight: 700;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.10);
  border: none;
}

/* 编辑模式样式 */
.edit-content {
  background: #f5f5f5;
  min-height: 100vh;
}

.edit-form {
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.06);
  padding: 40rpx;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 35rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.label.required::after {
  content: ' *';
  color: #ff4444;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #161616;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 35rpx;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.input:focus {
  border-color: #667eea;
}

.picker {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  border: 2rpx solid #161616;
  padding: 0 24rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: border-color 0.3s;
}

.picker.placeholder {
  color: #999;
}

.picker:focus {
  border-color: #667eea;
}

.arrow {
  color: #292727;
  font-size: 24rpx;
}

.edit-footer {
  display: flex;
  gap: 24rpx;
  padding: 0 32rpx;
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  background: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.submit-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.submit-btn.disabled {
  background: #cccccc;
  color: #999999;
}

.submit-btn[disabled] {
  opacity: 0.6;
}