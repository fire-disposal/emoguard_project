/* pages/reports/list/list.wxss */
.reports-container {
  min-height: 100vh;
  padding: 40rpx 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e3e6f3 100%);
}

.tab-bar {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(43,58,85,0.04);
  padding: 8rpx 0;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  font-weight: 700;
  color: #888;
  padding: 16rpx 0;
  border-radius: 16rpx;
  transition: background 0.2s, color 0.2s;
  cursor: pointer;
  letter-spacing: 1rpx;
}

.tab.active {
  color: #2b3a55;
  background: linear-gradient(90deg, #e8edfa 0%, #f8fafc 100%);
  box-shadow: 0 4rpx 16rpx rgba(87, 119, 179, 0.08);
  font-size: 44rpx;
  font-weight: 800;
}

.reports-list, .scales-list {
  margin-bottom: 32rpx;
}

.report-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(43,58,85,0.08);
  margin-bottom: 32rpx;
  padding: 32rpx 28rpx;
  transition: box-shadow 0.2s;
  border: 2rpx solid #e3e6f3;
}

.report-card:active {
  box-shadow: 0 2rpx 8rpx rgba(43,58,85,0.04);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
}

.report-type {
  font-size: 44rpx;
  font-weight: 700;
  color: #2b3a55;
  letter-spacing: 2rpx;
}

.risk-badge {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.risk-low { background: #f6ffed; color: #52c41a; }
.risk-medium { background: #fffbe6; color: #faad14; }
.risk-high { background: #fff2e8; color: #fa8c16; }
.risk-severe { background: #fff1f0; color: #f5222d; }

.report-summary {
  display: block;
  font-size: 36rpx;
  color: #444;
  line-height: 1.7;
  margin-bottom: 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
}

.report-time {
  display: block;
  font-size: 32rpx;
  color: #888;
  margin-top: 8rpx;
}

.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.load-more-text {
  font-size: 36rpx;
  color: #aaa;
  font-weight: 500;
}

.empty-state {
  text-align: center;
  margin-top: 120rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(43,58,85,0.04);
  padding: 48rpx 0;
}

.empty-icon {
  font-size: 90rpx;
  color: #e3e6f3;
  margin-bottom: 24rpx;
  display: block;
}

.empty-text {
  font-size: 38rpx;
  color: #888;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.loading-state {
  text-align: center;
  margin-top: 120rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(43,58,85,0.04);
  padding: 48rpx 0;
}

.loading-text {
  font-size: 38rpx;
  color: #aaa;
  font-weight: 600;
}