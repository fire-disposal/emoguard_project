/* pages/reports/list/list.wxss */
.reports-container {
  min-height: 100vh;
  padding: 32rpx;
}

.reports-header {
  margin-bottom: 32rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.reports-list {
  margin-bottom: 32rpx;
}

.report-card {
  margin-bottom: 24rpx;
  transition: all 0.3s;
}

.report-card:active {
  transform: scale(0.98);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.report-type {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.risk-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.risk-low {
  background: #f6ffed;
  color: #52c41a;
}

.risk-medium {
  background: #fffbe6;
  color: #faad14;
}

.risk-high {
  background: #fff2e8;
  color: #fa8c16;
}

.risk-severe {
  background: #fff1f0;
  color: #f5222d;
}

.report-summary {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.report-time {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.load-more {
  padding: 32rpx 0;
  text-align: center;
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}
