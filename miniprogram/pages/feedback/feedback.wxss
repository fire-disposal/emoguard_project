/* pages/feedback/feedback.wxss */
.feedback-container {
  padding: 32rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.rating-section {
  background: #fff;
  padding: 40rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
}

.star-rating {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.star {
  font-size: 64rpx;
  color: #ddd;
  transition: color 0.2s;
}

.star.active {
  color: #ffd700;
}

.content-section {
  background: #fff;
  padding: 40rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 48rpx;
}

.content-input {
  width: 100%;
  height: 240rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 35rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 35rpx;
  color: #999;
  margin-top: 16rpx;
}

.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: #ccc;
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.submit-btn.active {
  background: #667eea;
}

.submit-btn:active {
  opacity: 0.8;
}