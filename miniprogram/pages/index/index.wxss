/* pages/index/index.wxss */
.home-container {
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 欢迎区 */
.welcome-section {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.welcome-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.time-text {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.date-text {
  font-size: 26rpx;
  opacity: 0.9;
}

.welcome-message .greeting {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.welcome-message .subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.85;
}

/* 快捷功能区 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 28rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 52rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

/* 功能卡片区 */
.features-section .section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  border-left: 6rpx solid #1890ff;
}

.feature-card {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.feature-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.feature-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.feature-info {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

.feature-arrow {
  font-size: 40rpx;
  color: #1890ff;
  font-weight: 700;
  flex-shrink: 0;
}
