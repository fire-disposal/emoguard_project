/* pages/index/index.wxss */
.home-container {
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 欢迎区 */
.welcome-section {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.welcome-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.title-text {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.date-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 情绪测试入口 - 和谐统一设计 */
.emotion-test-day {
  background: linear-gradient(135deg, #ff8e8e 0%, #ff6b6b 50%, #ee5a52 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-top: 24rpx;
  box-shadow: 0 8rpx 28rpx rgba(255, 107, 107, 0.35);
  transition: all 0.3s ease;
  border: none;
  position: relative;
  overflow: hidden;
}

.emotion-test-night {
  background: linear-gradient(135deg, #a855f7 0%, #8617f4 50%, #093a89 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-top: 24rpx;
  box-shadow: 0 8rpx 28rpx rgba(134, 23, 244, 0.35);
  transition: all 0.3s ease;
  border: none;
  position: relative;
  overflow: hidden;
}

.emotion-test-day::before,
.emotion-test-night::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.1) 100%);
  border-radius: 24rpx;
}

.emotion-test-day:active,
.emotion-test-night:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.entry-content {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.entry-icon {
  font-size: 52rpx;
  margin-right: 24rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.entry-info {
  flex: 1;
}

.entry-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 6rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.entry-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
}

.entry-status {
  padding: 5rpx 5rpx;
  backdrop-filter: blur(8rpx);
  position: relative;
  z-index: 1;
}

.status-badge {
  transition: all 0.3s ease;
  padding: 12rpx 18rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.status-badge.completed {
  background: rgba(82, 196, 26, 0.8); /* 调整颜色和透明度 */
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.4); /* 调整阴影 */
}

.status-badge.pending {
  background: rgba(250, 173, 20, 0.8); /* 调整颜色和透明度 */
  box-shadow: 0 2rpx 8rpx rgba(250, 173, 20, 0.4); /* 调整阴影 */
}


.status-text {
  font-size: 30rpx;
  color: white;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 认知评估引导卡片 */
.cognitive-guide-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  color: white;
  position: relative;
  overflow: hidden;
}

.cognitive-guide-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.guide-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.guide-title-area {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.guide-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.guide-text {
  display: flex;
  flex-direction: column;
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.guide-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
  flex-shrink: 0;
}

.guide-content {
  position: relative;
  z-index: 1;
}

.guide-steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.guide-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-num {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.step-text {
  font-size: 22rpx;
  text-align: center;
  opacity: 0.9;
}

.step-arrow {
  font-size: 28rpx;
  opacity: 0.6;
  margin: 0 8rpx;
  margin-bottom: 24rpx;
}

.guide-actions {
  display: flex;
  justify-content: center;
}

.guide-btn {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.guide-btn::after {
  border: none;
}

/* 快捷功能区 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 28rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 52rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

/* 功能卡片区 */
.features-section .section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  border-left: 6rpx solid #0084ff;
}

.feature-card {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.feature-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.feature-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.feature-info {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

.feature-arrow {
  font-size: 40rpx;
  color: #1890ff;
  font-weight: 700;
  flex-shrink: 0;
}