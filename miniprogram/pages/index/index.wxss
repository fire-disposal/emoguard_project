/* pages/index/index.wxss */
.home-container {
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 欢迎区 */
.welcome-section {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.welcome-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.time-text {
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.date-text {
  font-size: 26rpx;
  opacity: 0.9;
}

.welcome-message .greeting {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.welcome-message .subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.85;
}

/* 情绪测试入口 */
.emotion-test-entry {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s;
}

.emotion-test-entry-ninght {
  background: linear-gradient(135deg, #8617f4 0%, #093a89 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-top: 24rpx;  
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s;
}


.emotion-test-entry:active {
  transform: scale(0.98);
}

.entry-content {
  display: flex;
  align-items: center;
}

.entry-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.entry-info {
  flex: 1;
}

.entry-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 4rpx;
}

.entry-desc {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.entry-status {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 8rpx 16rpx;  
}

.status-text {
  font-size: 22rpx;
  color: white;
  font-weight: 500;
}

/* 认知评估引导卡片 */
.cognitive-guide-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  color: white;
  position: relative;
  overflow: hidden;
}

.cognitive-guide-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.guide-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.guide-title-area {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.guide-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.guide-text {
  display: flex;
  flex-direction: column;
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.guide-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
  flex-shrink: 0;
}

.guide-content {
  position: relative;
  z-index: 1;
}

.guide-steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.guide-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-num {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.step-text {
  font-size: 22rpx;
  text-align: center;
  opacity: 0.9;
}

.step-arrow {
  font-size: 28rpx;
  opacity: 0.6;
  margin: 0 8rpx;
  margin-bottom: 24rpx;
}

.guide-actions {
  display: flex;
  justify-content: center;
}

.guide-btn {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.guide-btn::after {
  border: none;
}

/* 快捷功能区 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 28rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 52rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

/* 功能卡片区 */
.features-section .section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  border-left: 6rpx solid #1890ff;
}

.feature-card {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.feature-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.feature-icon {
  font-size: 56rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.feature-info {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

.feature-arrow {
  font-size: 40rpx;
  color: #1890ff;
  font-weight: 700;
  flex-shrink: 0;
}
