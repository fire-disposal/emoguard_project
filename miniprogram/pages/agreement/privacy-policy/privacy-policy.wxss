/* 隐私政策页面样式 */
.agreement-page {
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

.agreement-header {
  background-color: #fff;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #e8e8e8;
  text-align: center;
}

.agreement-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.agreement-content {
  flex: 1;
  padding: 32rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.agreement-section {
  margin-bottom: 40rpx;
}

.agreement-section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.section-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  text-align: left;
  white-space: pre-line;
  word-wrap: break-word;
  word-break: break-all;
}

.footer-text {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
}

/* 滚动条样式优化 */
::-webkit-scrollbar {
  width: 6rpx;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}