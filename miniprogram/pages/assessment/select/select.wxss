/* pages/assessment/select/select.wxss */
.select-container {
  min-height: 100vh;
  padding: 32rpx;
}

.select-header {
  margin-bottom: 32rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.scales-list {
  margin-bottom: 32rpx;
}

.scale-card {
  margin-bottom: 24rpx;
  transition: all 0.3s;
}

.scale-card:active {
  transform: scale(0.98);
}

.scale-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.scale-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.scale-code {
  font-size: 24rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.scale-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.scale-footer {
  display: flex;
  gap: 32rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.scale-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.info-label {
  font-size: 22rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.start-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  border-radius: 12rpx;
  color: #fff;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

.btn-arrow {
  font-size: 32rpx;
  font-weight: 700;
}
