/* pages/assessment/select/select.wxss */
.select-container {
  min-height: 100vh;
  padding: 32rpx;
}

.select-header {
  margin-bottom: 32rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 流程入口卡片 */
.flow-entry-card {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  overflow: hidden;
}

.flow-entry-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.flow-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.flow-content {
  flex: 1;
}

.flow-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.flow-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.flow-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.list-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 4rpx;
}

.scales-list {
  margin-bottom: 32rpx;
}

.scale-card {
  margin-bottom: 24rpx;
  transition: all 0.3s;
}

.scale-card:active {
  transform: scale(0.98);
}

.scale-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.scale-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.scale-code {
  font-size: 24rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.scale-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.scale-footer {
  display: flex;
  gap: 32rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.scale-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.info-label {
  font-size: 22rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.start-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  border-radius: 12rpx;
  color: #fff;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

.btn-arrow {
  font-size: 32rpx;
  font-weight: 700;
}
