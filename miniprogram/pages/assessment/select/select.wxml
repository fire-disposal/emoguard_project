<!-- 测评选择页面 - 支持智能测评和单问卷模式 -->

<view class="container">

  <!-- 智能测评入口 -->
  <view class="scales-section">
    <text class="section-title">🌱 智能测评</text>
    <view class="scales-list">
      <view class="scale-item">
        <view class="scale-info">
          <text class="scale-name">认知障碍综合测评</text>
          <text class="scale-desc">结合moca\scd-q9等综合评估认知状况</text>
        </view>
        <button class="scale-btn" bindtap="startSmartAssessment">开始</button>
      </view>
    </view>
  </view>

  <!-- 单问卷模式 -->
  <view class="scales-section">
    <text class="section-title">📋 单独测评</text>
    
    <view wx:if="{{loading}}" class="loading">
      <text>加载中...</text>
    </view>
    
    <view wx:elif="{{scales.length === 0}}" class="empty">
      <text>暂无量表可用</text>
    </view>
    
    <view wx:else class="scales-list">
      <view class="scale-item" wx:for="{{scales}}" wx:key="id">
        <view class="scale-info">
          <text class="scale-name">{{item.name}}</text>
          <text class="scale-desc">{{item.description}}</text>
        </view>
        <button class="scale-btn" data-id="{{item.id}}" data-name="{{item.name}}" bindtap="startSingleScale">开始</button>
      </view>
    </view>
  </view>
</view>
