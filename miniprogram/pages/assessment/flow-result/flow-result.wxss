/* Assessment report page styles - simplified, no Chinese */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.report-container {
  padding: 24rpx;
}

.report-header {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.header-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 8rpx;
}

.header-date {
  font-size: 18rpx;
  color: #999;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.title-icon {
  margin-right: 8rpx;
  font-size: 22rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 18rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.text-main {
  font-size: 20rpx;
  color: #333;
  line-height: 1.6;
}

.text-sub {
  font-size: 16rpx;
  color: #999;
}

.score {
  font-size: 24rpx;
  font-weight: bold;
  color: #1890ff;
  margin-right: 4rpx;
}

.actions {
  padding: 12rpx 0;
}

.btn-primary {
  width: 100%;
  height: 48rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 24rpx;
  font-size: 20rpx;
  border: none;
}