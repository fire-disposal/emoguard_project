/* Assessment flow page styles - simplified, no Chinese */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.flow-container {
  padding: 20rpx;
}

.flow-intro {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 28rpx;
}

.intro-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 12rpx;
}

.intro-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
}

.step-indicator {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  margin-bottom: 24rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-number {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #e0e0e0;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.step-item.active .step-number {
  background: #1890ff;
  color: #fff;
}

.step-name {
  font-size: 14rpx;
  color: #999;
}

.step-item.active .step-name {
  color: #1890ff;
  font-weight: bold;
}

.step-line {
  flex: 1;
  height: 2rpx;
  background: #e0e0e0;
  margin: 0 6rpx;
  margin-bottom: 16rpx;
}

.scales-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
}

.section-title {
  font-size: 18rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.scales-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.scale-card {
  display: flex;
  align-items: center;
  padding: 14rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.scale-card:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.scale-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.scale-info {
  flex: 1;
}

.scale-name {
  font-size: 16rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 2rpx;
}

.scale-status {
  font-size: 12rpx;
  color: #ff9800;
}

.scale-arrow {
  font-size: 18rpx;
  color: #999;
}

.completed-container {
  padding: 32rpx 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.success-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #52c41a;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.success-title {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.conclusion-card {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.conclusion-title {
  font-size: 16rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.conclusion-content {
  font-size: 14rpx;
  color: #666;
  line-height: 1.5;
}

.analysis-summary {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.summary-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 14rpx;
}

.summary-label {
  color: #999;
  margin-right: 6rpx;
}

.summary-value {
  color: #333;
  font-weight: bold;
}

.action-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.btn-primary,
.btn-secondary {
  width: 100%;
  height: 40rpx;
  border-radius: 20rpx;
  font-size: 14rpx;
  border: none;
}

.btn-primary {
  background: #1890ff;
  color: #fff;
}

.btn-secondary {
  background: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
}