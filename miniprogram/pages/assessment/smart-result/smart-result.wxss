/* 智能测评结果页面样式 - 极简设计 */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
}

.loading-container, .error-container, .result-container {
  width: 100%;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-top: 200rpx;
}

.error-message {
  font-size: 32rpx;
  color: #e74c3c;
  text-align: center;
  margin: 200rpx 0 40rpx;
}

.retry-btn, .home-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx auto;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.retry-btn {
  background-color: #007bff;
  color: white;
}

.home-btn {
  background-color: #6c757d;
  color: white;
}

/* 结果内容样式 */
.summary-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.summary-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.conclusion {
  font-size: 32rpx;
  color: #555;
  text-align: center;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.risk-level {
  font-size: 28rpx;
  color: #e74c3c;
  text-align: center;
  font-weight: bold;
}

.scales-section, .recommendations-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 20rpx;
}

.scale-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.scale-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.scale-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.scale-score, .scale-level {
  font-size: 26rpx;
  color: #666;
}

.scale-status {
  font-size: 24rpx;
  color: #e74c3c;
  font-weight: bold;
}

.recommendation-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommendation-item {
  background: #e8f4fd;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 40rpx;
}

.primary-btn, .secondary-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.primary-btn {
  background-color: #007bff;
  color: white;
}

.secondary-btn {
  background-color: #6c757d;
  color: white;
}