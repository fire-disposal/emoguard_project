<!-- 智能测评页面 - 极简设计 -->
<view class="container">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-container">
    <view class="loading-text">正在准备智能测评...</view>
  </view>

  <!-- 错误状态 -->
  <view wx:elif="{{errorMessage}}" class="error-container">
    <view class="error-message">{{errorMessage}}</view>
    <button class="retry-btn" bindtap="startSmartAssessment">重试</button>
    <button class="home-btn" bindtap="goHome">返回首页</button>
  </view>

  <!-- 正常状态 - 自动跳转到答题页面 -->
  <view wx:else class="info-container">
    <view class="title">智能测评准备中...</view>
    <view class="description">系统正在为您定制个性化的测评方案</view>
    <view class="progress-info">
      <text>预计量表数量：{{totalScales}}</text>
    </view>
  </view>
</view>