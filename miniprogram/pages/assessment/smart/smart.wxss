/* 智能测评页面样式 - 极简设计 */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-container, .error-container, .info-container {
  text-align: center;
  width: 100%;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.error-message {
  font-size: 32rpx;
  color: #e74c3c;
  margin-bottom: 40rpx;
}

.retry-btn, .home-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx auto;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.retry-btn {
  background-color: #007bff;
  color: white;
}

.home-btn {
  background-color: #6c757d;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.description {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.progress-info {
  font-size: 28rpx;
  color: #999;
}