/* 情绪四维度记录页面样式 */
.page {
  padding: 32rpx 24rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.04);
  margin-bottom: 32rpx;
  padding: 32rpx 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 24rpx;
  text-align: center;
}

.slider-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  color: #555;
}

.slider-value {
  font-size: 28rpx;
  color: #007aff;
  margin-left: 16rpx;
}

.slider-wrap {
  margin-bottom: 32rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 32rpx;
  padding: 20rpx 0;
  text-align: center;
  margin-top: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.submit-btn[disabled] {
  opacity: 0.5;
}