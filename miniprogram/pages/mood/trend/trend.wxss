/* 情绪趋势分析页面样式 - 简洁高可读性设计 */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f5ff 100%);
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 页面头部 */
.page-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  background: #fff;
  border-bottom: 1rpx solid #e9ecef;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #212529;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: #6c757d;
}

/* 控制面板 */
.control-panel {
  background: white;
  padding: 32rpx;
  margin: 0 0 32rpx 0;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.time-range-selector,
.metric-selector {
  margin-bottom: 20rpx;
}

.time-range-selector:last-child,
.metric-selector:last-child {
  margin-bottom: 0;
}

.selector-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 16rpx;
}

.range-buttons,
.metric-buttons {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.range-btn,
.metric-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 2rpx solid #e9ecef;
  background: #fff;
  color: #6c757d;
  transition: all 0.3s ease;
  cursor: pointer;
}

.range-btn.active,
.metric-btn.active {
  background: #007aff;
  border-color: #007aff;
  color: #fff;
}

.range-btn:active,
.metric-btn:active {
  transform: scale(0.95);
}

/* 统计卡片容器 */
.stats-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: translateY(2rpx);
}

.stat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.stat-title {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: 500;
}

.stat-trend {
  font-size: 24rpx;
  font-weight: 600;
}

.stat-trend-up {
  color: #dc3545;
}

.stat-trend-down {
  color: #28a745;
}

.stat-trend-stable {
  color: #ffc107;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #212529;
  margin-bottom: 8rpx;
}

.stat-desc {
  font-size: 22rpx;
  color: #6c757d;
  line-height: 1.4;
}

/* 图表容器 */
.chart-container {
  background: white;
  border-radius: 20rpx;
  margin: 0 0 32rpx 0;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
}

.chart-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: #f8f9fa;
  color: #495057;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn .icon {
  font-size: 24rpx;
}

.chart-wrapper {
  width: 100%;
  height: 500rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.ec-canvas {
  width: 100%;
  height: 100%;
}

/* 数据说明 */
.data-info {
  background: white;
  border-radius: 20rpx;
  margin: 0 0 32rpx 0;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.info-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 20rpx;
}

.info-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.info-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #495057;
  min-width: 120rpx;
}

.info-value {
  flex: 1;
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-container {
    grid-template-columns: 1fr;
  }
  
  .range-buttons,
  .metric-buttons {
    justify-content: center;
  }
  
  .chart-wrapper {
    height: 400rpx;
  }
}

@media (max-height: 800rpx) {
  .page-header {
    padding: 30rpx 20rpx 15rpx;
  }
  
  .control-panel {
    padding: 20rpx;
    margin: 15rpx;
  }
  
  .chart-container {
    padding: 20rpx;
    margin: 15rpx;
  }
}

/* 历史记录表单样式 */
.history-container {
  background: white;
  border-radius: 20rpx;
  margin: 0 0 32rpx 0;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.history-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #212529;
}

.history-count {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: 500;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.history-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.record-date {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 16rpx;
}

.record-scores {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.score-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid #dee2e6;
}

.score-label {
  font-size: 22rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.score-value {
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.score-value.depression {
  background: linear-gradient(135deg, #ff7875 0%, #ff4d4f 100%);
}

.score-value.anxiety {
  background: linear-gradient(135deg, #ffa940 0%, #fa8c16 100%);
}

.score-value.energy {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.score-value.sleep {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
}

/* 深色模式下的历史记录样式 */
@media (prefers-color-scheme: dark) {
  .history-container {
    background: #2d2d2d;
    color: #f8f9fa;
  }
  
  .history-title {
    color: #f8f9fa;
  }
  
  .history-count {
    color: #adb5bd;
  }
  
  .history-item {
    background: #3d3d3d;
    border-color: #495057;
  }
  
  .history-item:active {
    background: #495057;
  }
  
  .record-date {
    color: #f8f9fa;
  }
  
  .score-item {
    background: #2d2d2d;
    border-color: #495057;
  }
  
  .score-label {
    color: #adb5bd;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page {
    background: #1a1a1a;
  }
  
  .page-header,
  .control-panel,
  .stat-card,
  .chart-container,
  .data-info {
    background: #2d2d2d;
    color: #f8f9fa;
  }
  
  .page-title,
  .chart-title,
  .info-title,
  .stat-value {
    color: #f8f9fa;
  }
  
  .page-subtitle,
  .stat-desc,
  .info-value {
    color: #adb5bd;
  }
}
