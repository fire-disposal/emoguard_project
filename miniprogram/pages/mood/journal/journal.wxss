/* pages/mood/journal/journal.wxss */
.mood-container {
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

/* 心情记录模块 */
.mood-record-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.section-icon {
  font-size: 60rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 50rpx;
  font-weight: 700;
  color: #333;
}

/* 题目块样式 */
.question-block {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.question-header {
  margin-bottom: 20rpx;
}

.question-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.question-subtitle {
  display: block;
  font-size: 35rpx;
  color: #666;
}

.question-content {
  padding: 0 8rpx;
}

/* 情绪选择样式 */
.mood-options {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.mood-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: white;
  border: 3rpx solid #e0e6ed;
  border-radius: 16rpx;
  padding: 20rpx 12rpx;
  transition: all 0.3s;
}

.mood-option.selected {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border-color: #1890ff;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.2);
}

.mood-emoji {
  font-size: 80rpx;
  margin-bottom: 8rpx;
  text-align: center;
}


.mood-text {
  font-size: 30rpx;
  color: #666;
  text-align: center;
}

.mood-option.selected .mood-text {
  color: #0050b3;
  font-weight: 700;
}

/* 其他情绪输入框 */
.other-mood-input {
  margin-top: 16rpx;
}

.other-mood-input input {
  width: 100%;
  background: white;
  border: 2rpx solid #e0e6ed;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
}

/* 单选按钮样式 */
.radio-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.radio-option {
  display: flex;
  align-items: center;
  background: white;
  border: 2rpx solid #e0e6ed;
  border-radius: 12rpx;
  padding: 20rpx;
  transition: all 0.3s;
}

.radio-option.selected {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border-color: #1890ff;
}

.radio-option radio {
  margin-right: 16rpx;
}



/* 复选框样式 */
.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.checkbox-option {
  display: flex;
  align-items: center;
  background: white;
  border: 2rpx solid #e0e6ed;
  border-radius: 12rpx;
  padding: 20rpx;
  transition: all 0.3s;
}

.checkbox-option.selected {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border-color: #1890ff;
}

.checkbox-option checkbox {
  margin-right: 16rpx;
}

.checkbox-text {
  font-size: 35rpx;
  color: #333;
}

/* 文本输入样式 */
.text-input {
  width: 100%;
  min-height: 120rpx;
  background: white;
  border: 2rpx solid #e0e6ed;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.text-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #bfbfbf;
  margin-top: 8rpx;
}

/* 提交按钮 */
.submit-mood-btn {
  width: 90%;
  margin: 40rpx auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: white;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 45rpx;
  font-weight: 700;
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s;
}

.submit-mood-btn:active:not(.btn-disabled) {
  transform: scale(0.98);
}

.submit-mood-btn.btn-disabled {
  opacity: 0.5;
  pointer-events: none;
}

.btn-icon {
  font-size: 45rpx;
}

.btn-text {
  font-size: 40rpx;
}

/* 心情历史 */
.mood-history-section {
  margin-bottom: 32rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.history-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.history-count {
  font-size: 30rpx;
  justify-content: end;
  margin-right: 0rpx;
  color: #535353;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.toggle-icon {
  font-size: 35rpx;
  color: #999;
  transition: transform 0.3s;
  margin-right: 35rpx;
}

.loading-state {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 35rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 60rpx 40rpx;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.history-list .history-item {
  display: flex;
  align-items: flex-start;
  background: #fafbfc;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.history-item:last-child {
  margin-bottom: 0;
}

.item-emoji {
  font-size: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.item-mood-text {
  font-size: 40rpx;
  color: #1890ff;
  font-weight: 700;
}

.item-time {
  font-size: 35rpx;
  color: #999;
}

.item-reason {
  display: block;
  font-size: 35rpx;
  color: #595959;
  line-height: 1.6;
}

.item-score {
  display: block;
  font-size: 35rpx;
  color: #8c8c8c;
}
