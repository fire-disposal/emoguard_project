.page {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 0;
}

/* è¿›åº¦æ¡å®¹å™¨ */
.progress-container {
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #007aff;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  color: #6c757d;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 60rpx;
  text-align: right;
}

/* æ­¥éª¤æŒ‡ç¤ºå™¨ */
.step-indicators {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #e9ecef;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  opacity: 0.6;
  transition: all 0.3s ease;
}

.step-item.active {
  opacity: 1;
}

.step-item.completed {
  opacity: 0.8;
}

.step-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e9ecef;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6c757d;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.step-item.active .step-circle {
  background: #007aff;
  color: #fff;
}

.step-item.completed .step-circle {
  background: #28a745;
  color: #fff;
}

.step-title {
  color: #495057;
  font-size: 22rpx;
  text-align: center;
  font-weight: 500;
}

